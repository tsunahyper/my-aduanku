# Comments Service Environment Variables
# Copy this file to .env and update the values

# ===========================================
# SERVICE CONFIGURATION
# ===========================================

# Service Port
PORT=5004

# Node Environment
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection String
DB_URI=mongodb://localhost:27017/aduanku_comments

# Alternative: MongoDB Atlas
# DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_comments?retryWrites=true&w=majority

# ===========================================
# JWT CONFIGURATION
# ===========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345

# ===========================================
# AWS S3 CONFIGURATION (for attachments)
# ===========================================

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Bucket Name
S3_BUCKET=aduanku-uploads

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

# Maximum file size (5MB for comments)
MAX_FILE_SIZE=5242880

# Maximum number of attachments per comment
MAX_ATTACHMENTS=3

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,application/pdf

# ===========================================
# COMMENT SETTINGS
# ===========================================

# Maximum comment length
MAX_COMMENT_LENGTH=1000

# Rate limiting for comments
COMMENT_RATE_LIMIT_WINDOW_MS=60000
COMMENT_RATE_LIMIT_MAX_REQUESTS=10

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# LOGGING
# ===========================================

# Log Level
LOG_LEVEL=info

# Enable Debug
DEBUG=aduanku:comments:*
