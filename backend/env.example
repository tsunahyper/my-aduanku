# ADUANKU Backend Environment Variables for Docker Compose
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection Strings
# You can use the same database with different collections or separate databases
AUTH_DB_URI=mongodb://localhost:27017/aduanku_auth
USER_DB_URI=mongodb://localhost:27017/aduanku_users
ISSUE_DB_URI=mongodb://localhost:27017/aduanku_issues
COMMENTS_DB_URI=mongodb://localhost:27017/aduanku_comments
ANALYTICS_DB_URI=mongodb://localhost:27017/aduanku_analytics

# Alternative: Use MongoDB Atlas (cloud)
# AUTH_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_auth?retryWrites=true&w=majority
# USER_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_users?retryWrites=true&w=majority
# ISSUE_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_issues?retryWrites=true&w=majority
# COMMENTS_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_comments?retryWrites=true&w=majority
# ANALYTICS_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_analytics?retryWrites=true&w=majority

# ===========================================
# JWT CONFIGURATION
# ===========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345

# JWT Token Expiration (optional, defaults to 15m)
JWT_EXPIRES_IN=15m

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Bucket Name
S3_BUCKET=aduanku-uploads

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Node Environment
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
