# Analytics Service Environment Variables
# Copy this file to .env and update the values

# ===========================================
# SERVICE CONFIGURATION
# ===========================================

# Service Port
PORT=5005

# Node Environment
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection String
DB_URI=mongodb://localhost:27017/aduanku_analytics

# Alternative: MongoDB Atlas
# DB_URI=mongodb+srv://username:password@cluster.mongodb.net/aduanku_analytics?retryWrites=true&w=majority

# ===========================================
# JWT CONFIGURATION
# ===========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345

# ===========================================
# ANALYTICS SETTINGS
# ===========================================

# Cache TTL for analytics data (in seconds)
CACHE_TTL=300

# Maximum number of data points for trends
MAX_TREND_POINTS=30

# Default date range for analytics (in days)
DEFAULT_DATE_RANGE=30

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limiting for analytics endpoints
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# LOGGING
# ===========================================

# Log Level
LOG_LEVEL=info

# Enable Debug
DEBUG=aduanku:analytics:*
